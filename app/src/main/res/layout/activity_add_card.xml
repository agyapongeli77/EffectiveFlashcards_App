<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCardActivity">

    <ImageView
        android:id="@+id/cancel_action_icon"
        android:layout_width="40dp"
        android:layout_marginRight="20sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_height="120dp"
        android:src="@drawable/cancel_icon" />

    <ImageView
        android:id="@+id/save_data_icon"
        android:layout_marginLeft="20sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_width="40dp"
        android:layout_height="120dp"
        android:src="@drawable/save_icon" />

    <EditText
        android:id="@+id/questionTextField"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:hint="Enter The Question Here"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/correctAnsTextField"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:layout_below="@id/questionTextField"
        android:hint="Enter The Correct Answer Here"
        android:textColorHighlight="#7cff88"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/wrongAns1_TextField"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:layout_below="@id/correctAnsTextField"
        android:textColorHighlight="#7cff88"
        android:hint="Enter Wrong Answer Option Here"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/wrongAns2_TextField"
        android:layout_width="match_parent"
        android:textColorHighlight="#7cff88"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:layout_below="@id/wrongAns1_TextField"
        android:hint="Enter Another Wrong Answer Option Here"
        android:inputType="textMultiLine" />

</RelativeLayout>